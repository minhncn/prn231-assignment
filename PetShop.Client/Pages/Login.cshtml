@page "login"
@model PetShop.Client.Pages.LoginModel
@{
}
<div class="container">
    <div class="login-page">
        <div class="form">
            <div class="login-form">
                <form method="post">
                    <input type="text" placeholder="Username" asp-for="Username">
                    <input type="password" placeholder="Password" asp-for="Password">
                    @Html.ValidationMessageFor(m => m.ErrorString, "", new { @class = "text-danger" })
                    <button>Login</button>
                </form>
            </div>
        </div>
    </div>
</div>